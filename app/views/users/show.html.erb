<% provide(:title, 'All Users') %>
<h1>プロフィール</h1>
<div class="row">
<div class="col-md-10 col-md-offset-1">
  <table class="table table-bordered" id="tabl-task">
      <tbody>
        <tr>
          <th class="active col-md-2"><%= Task.human_attribute_name :id %></th>
          <td class="col-md-10"><%= @user.id %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :name %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :email %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :created_at %></th>
          <td><%= l(@user.created_at, format: :long) %></td>
        </tr>
  </table>    
</div>  
</div>